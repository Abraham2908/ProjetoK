@model IEnumerable<ProjetoK1.Models.Produto>

@{ ViewData["Title"] = "Produtos registrados"; }

<div class="container p-5">
    <div class="border border-light rounded p-5">
        <h3>Estoque:</h3>
        <br />
        <a asp-controller="Produtos" asp-action="NovoProduto" class="btn btn-sm btn-success">
            Novo produto
        </a>
        <hr />
        <table class="table table-striped table-hover table-sm">
            <thead>
                <tr class="thead-light">
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Quantidade)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Preco)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Categoria.Nome)
                    </th>

                    <th>
                        Ações
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.Nome)
                        </td>

                        <td>
                            <div class="row">
                                <form asp-controller="Produtos" asp-action="ExcluirProduto"
                                      asp-route-produtoId="@item.ProdutoId">

                                    <button class="btn btn-danger btn-sm">
                                        Excluir
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
