@model IEnumerable<ProjetoK1.Models.Categoria>

@{ ViewData["Title"] = "Categorias registradas"; }

<div class="container p-5">
    <div class="border border-light rounded p-5">
        <a asp-controller="Categorias" asp-action="NovaCategoria" class="btn btn-sm btn-success">
            Nova categoria
        </a>

        <hr />

        <table class="table table-striped table-hover table-sm">
            <thead>
                <tr class="thead-light">
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>

                    <th>
                        Ações
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>

                        <td>
                            <div class="row">

                                <form asp-controller="Categorias" asp-action="ExcluirCategoria"
                                      asp-route-categoriaId="@item.CategoriaId">

                                    <button class="btn btn-danger btn-sm">
                                        Excluir
                                    </button>

                                </form>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>