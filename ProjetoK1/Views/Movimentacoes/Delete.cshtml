@model ProjetoK1.Models.Movimentacao

@{
    ViewData["Title"] = "Excluir";
}

<div class="container-excluir-mov" style="
    margin-left: 250px;
    margin-top: 70px;
    /* align-items: center; */
">
    <h3>Excluir</h3>

    <h5>Tem certeza que deseja excluir esta movimentação?</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataMovimentacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataMovimentacao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MovimentacaoId" />
        <input type="submit" value="Excluir" class="btn btn-danger btn-sm" /> |
        <a class="btn btn-info btn-sm" asp-action="Index">Voltar</a>
    </form>
</div>

