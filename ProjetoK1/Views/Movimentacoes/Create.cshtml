@model ProjetoK1.Models.Movimentacao

@{
    ViewData["Title"] = "Nova Movimentação:";
}

<div class="row" style="margin-left: 270px; margin-top: 20px;">
    <div class="col-md-4">
        <h5>Nova Movimentação:</h5>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label">Produto</label>
                <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
            </div>
            <div class="form-group">
                <label>Tipo</label>
                <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<TipoEnum>()" class="form-control form-control-sm"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <input hidden asp-for="ProdutoId" />
            <div class="form-group">
                <label asp-for="DataMovimentacao" class="control-label">Data da Movimentação</label>
                <input asp-for="DataMovimentacao" class="form-control" />
                <span asp-validation-for="DataMovimentacao" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
